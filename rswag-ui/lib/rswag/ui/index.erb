<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="API Documentation">
    <title>API Documentation | Swagger UI</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&family=Source+Code+Pro:wght@300;600&family=Titillium+Web:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Swagger UI -->
    <link rel="stylesheet" href="https://unpkg.com/swagger-ui-dist@5.18.2/swagger-ui.css">

    <style>
        html {
            box-sizing: border-box;
            overflow-y: scroll;
        }

        *, *:before, *:after {
            box-sizing: inherit;
        }

        body {
            margin: 0;
            background: #fafafa;
            min-height: 100vh;
        }

        #swagger-ui {
            max-width: 1460px;
            margin: 0 auto;
            padding: 0 20px;
        }
    </style>
</head>
<body>
    <!-- SVG Sprite -->
    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" style="position: absolute; width: 0; height: 0" aria-hidden="true">
        <defs>
            <symbol viewBox="0 0 20 20" id="unlocked">
                <path d="M15.8 8H14V5.6C14 2.703 12.665 1 10 1 7.334 1 6 2.703 6 5.6V6h2v-.801C8 3.754 8.797 3 10 3c1.203 0 2 .754 2 2.199V8H4c-.553 0-1 .646-1 1.199V17c0 .549.428 1.139.951 1.307l1.197.387C5.672 18.861 6.55 19 7.1 19h5.8c.549 0 1.428-.139 1.951-.307l1.196-.387c.524-.167.953-.757.953-1.306V9.199C17 8.646 16.352 8 15.8 8z"></path>
            </symbol>
            <symbol viewBox="0 0 20 20" id="locked">
                <path d="M15.8 8H14V5.6C14 2.703 12.665 1 10 1 7.334 1 6 2.703 6 5.6V8H4c-.553 0-1 .646-1 1.199V17c0 .549.428 1.139.951 1.307l1.197.387C5.672 18.861 6.55 19 7.1 19h5.8c.549 0 1.428-.139 1.951-.307l1.196-.387c.524-.167.953-.757.953-1.306V9.199C17 8.646 16.352 8 15.8 8zM12 8H8V5.199C8 3.754 8.797 3 10 3c1.203 0 2 .754 2 2.199V8z"/>
            </symbol>
            <symbol viewBox="0 0 20 20" id="close">
                <path d="M14.348 14.849c-.469.469-1.229.469-1.697 0L10 11.819l-2.651 3.029c-.469.469-1.229.469-1.697 0-.469-.469-.469-1.229 0-1.697l2.758-3.15-2.759-3.152c-.469-.469-.469-1.228 0-1.697.469-.469 1.228-.469 1.697 0L10 8.183l2.651-3.031c.469-.469 1.228-.469 1.697 0 .469.469.469 1.229 0 1.697l-2.758 3.152 2.758 3.15c.469.469.469 1.229 0 1.698z"/>
            </symbol>
            <symbol viewBox="0 0 20 20" id="large-arrow">
                <path d="M13.25 10L6.109 2.58c-.268-.27-.268-.707 0-.979.268-.27.701-.27.969 0l7.83 7.908c.268.271.268.709 0 .979l-7.83 7.908c-.268.271-.701.27-.969 0-.268-.269-.268-.707 0-.979L13.25 10z"/>
            </symbol>
            <symbol viewBox="0 0 20 20" id="large-arrow-down">
                <path d="M17.418 6.109c.272-.268.709-.268.979 0s.271.701 0 .969l-7.908 7.83c-.27.268-.707.268-.979 0l-7.908-7.83c-.27-.268-.27-.701 0-.969.271-.268.709-.268.979 0L10 13.25l7.418-7.141z"/>
            </symbol>
            <symbol viewBox="0 0 24 24" id="jump-to">
                <path d="M19 7v4H5.83l3.58-3.59L8 6l-6 6 6 6 1.41-1.41L5.83 13H21V7z"/>
            </symbol>
            <symbol viewBox="0 0 24 24" id="expand">
                <path d="M10 18h4v-2h-4v2zM3 6v2h18V6H3zm3 7h12v-2H6v2z"/>
            </symbol>
        </defs>
    </svg>

    <div id="swagger-ui"></div>

    <!-- Edge compatibility -->
    <script>
        if (window.navigator.userAgent.indexOf("Edge") > -1) {
            console.log("Removing native Edge fetch in favor of swagger-ui's polyfill");
            window.fetch = undefined;
        }
    </script>

    <!-- Swagger UI Bundle -->
    <script src="https://unpkg.com/swagger-ui-dist@5.18.2/swagger-ui-bundle.js"></script>
    <script src="https://unpkg.com/swagger-ui-dist@5.18.2/swagger-ui-standalone-preset.js"></script>

    <script>
        window.onload = function() {
          var configObject = JSON.parse('<%= config_object.to_json %>');
          var oauthConfigObject = JSON.parse('<%= oauth_config_object.to_json %>');

          // Core Configuration
          const uiConfig = {
              // Mandatory parameters
              dom_id: "#swagger-ui",
              presets: [SwaggerUIBundle.presets.apis, SwaggerUIStandalonePreset],
              layout: "StandaloneLayout",

              // Documentation Enhancement
              docExpansion: "list",           // "list", "full", or "none" - controls initial expansion of endpoints
              defaultModelsExpandDepth: 1,    // Depth of schema expansion in models
              defaultModelExpandDepth: 1,     // Depth of schema expansion in model properties
              displayRequestDuration: true,    // Show response time metrics
              maxDisplayedTags: null,         // Limit number of tags/groups shown (null = show all)

              // Navigation & Search
              filter: true,                   // Enable search functionality
              deepLinking: true,              // Enable deep linking for tags and operations
              persistAuthorization: true,     // Persist auth data in localStorage

              // Request Handling
              tryItOutEnabled: true,          // Enable "Try it out" feature
              supportedSubmitMethods: [       // HTTP methods that can be "tried out"
                  'get', 'put', 'post',
                  'delete', 'options',
                  'head', 'patch', 'trace'
              ],
              requestInterceptor: (req) => {  // Modify requests before they're sent
                  // Add custom headers or modify request
                  req.headers['X-Request-Source'] = 'swagger-ui';
                  return req;
              },
              responseInterceptor: (res) => { // Process responses before display
                  // Add custom response handling
                  console.log('API Response:', res);
                  return res;
              },

              // Syntax Highlighting
              syntaxHighlight: {
                  activated: true,
                  theme: "agate"              // Options: "agate", "arta", "monokai", "nord", "obsidian" etc.
              },

              // UI Customization
              showExtensions: true,           // Display vendor extensions
              showCommonExtensions: true,     // Display common extensions
              defaultModelRendering: 'model', // Controls how models are shown, 'model' or 'schema'
              validatorUrl: null,             // Disable validator or set custom validator

              // Error Handling
              onComplete: () => {
                  console.log('Swagger UI initialization complete');
              },
              showMutatedRequest: true,       // Show modified request after parameter changes

              // Performance
              maxDisplayedTags: null,         // Limit number of displayed API tags
              operationsSorter: (a, b) => {   // Custom sorting for operations
                  const methodsOrder = ['get', 'post', 'put', 'delete', 'patch', 'options', 'trace'];
                  return methodsOrder.indexOf(a.get('method')) - methodsOrder.indexOf(b.get('method'));
              },
              tagsSorter: 'alpha',            // Sort tags alphabetically

              // Plugins and Extensions
              plugins: [
                  // Add custom plugins here
                  () => ({
                      components: {
                          // Custom components can be added here
                      }
                  })
              ],

              // OAuth Configuration
              oauth2RedirectUrl: window.location.href.replace("index.html", "oauth2-redirect.html")
          };

          // Merge with existing config
          Object.assign(configObject, uiConfig);

          // Initialize Swagger UI
          const ui = SwaggerUIBundle(configObject);

          // Initialize OAuth
          ui.initOAuth(oauthConfigObject);
      };
    </script>
</body>
</html>
